<script>
     
    function getRelated() {    
        //Creating an XMLHttpRequest and sending
        //$("#dvTopNewsWeekly").show();
        var formdata = new FormData(); //FormData object
        formdata.append("topicid", @ViewBag.topicid);
        var xhr = new XMLHttpRequest();
        xhr.open('POST', '/Home/getRelated');
        xhr.send(formdata);
        var content = "";
        xhr.onreadystatechange = function () {
            if (xhr.readyState == 4 && xhr.status == 200) {
                var news = '{"news":' + xhr.responseText + '}';
                //alert(news);
                var json_parsed = $.parseJSON(news);
                var removeDuplicate = "";
                var title = "";
                for (var i = 0; i < 4; i++) {
                    if (json_parsed.news[i]) {
                        var n = json_parsed.news[i];
                        if (n.name != "" && n.name != null && removeDuplicate.indexOf(n.name) < 0) {
                            title = n.name.replace(/&#39;/g, "");
                            content+="<li>";
                            content+="<a href=\"/Home/DocBao/"+n.id+"\" title=\""+title+"\">";
                           // content+="<span class=\"play-icon\"></span>";
                            //content+="<span class=\"background-video\"></span>";
                            content+="<img src=\""+n.image+"\" class=\"img-related\">";
                            content+="<span class=\"title-related\">"+title+"</span>";
                            content+="</a>";
                            content+="</li>";
                            removeDuplicate += n.name + ",";
                        }
                    }
                }
                if (json_parsed.news.length>0) 
                {
                    $("#relatedNews").html(content);
                }else{
                    $("#right-col").hide();
                }
            }
        }
    }
    getRelated();
</script>
