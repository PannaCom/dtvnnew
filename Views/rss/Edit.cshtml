@model youknow.Models.rss

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>rss</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            Domain
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>
        <div class="editor-label">
            Domain ID
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.domain)
            @Html.ValidationMessageFor(model => model.domain)
        </div>

        <div class="editor-label">
            Url(Nguồn)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.url)
            @Html.ValidationMessageFor(model => model.url)
        </div>

        <div class="editor-label">
            Chuyên mục
        </div>
        <div class="editor-field">
            <select name="catid" id="catid">
                <option value="-1">Chọn chuyên mục</option>
                <option value="0">Trang chủ</option>
                <option value="1">Xã hội</option>
                <option value="2">Thế giới</option>
                <option value="3">Kinh tế</option>
                <option value="4">Văn hóa</option>
                <option value="5">Thể thao</option>
                <option value="6">Pháp luật</option>
                <option value="7">Khoa học</option>
                <option value="8">Công nghệ</option>
                <option value="9">Ô tô xe máy</option>
                <option value="10">Giáo dục</option>
                <option value="12">Sức khỏe</option>
                <option value="13">Giải trí</option>
            </select>
            <script>document.getElementById("catid").value = "@Model.catid";</script>
            @Html.ValidationMessageFor(model => model.catid)
        </div>

        
       
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
