@model IEnumerable<youknow.Models.comment>

@{
    ViewBag.Title = "Index";
}

<h2>Quản lý Comment người dùng</h2>

<div>
    <input type="text" placeholder="tìm kiếm" id="keyword" name="keyword"><input type="button" value="Tìm kiếm" onclick="search();">
</div>
<table border="1">
    <tr>
        <th>
            Người gửi
        </th>        
        <th>
            Link
        </th>
        <th>
            Nội dung comment
        </th>
        <th>
            Ngày gửi
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @youknow.Uti.getUserNameFromToken(@item.usertoken)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datetime)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.id }) |
            @Html.ActionLink("Xem chi tiết", "Details", new { id=item.id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
<script>
    function search() {
        var keyword = document.getElementById("keyword").value;
        window.location = '/comment/Index?keyword=' + keyword;
    }
</script>